{
	"name": "pastel",
	"version": "4.0.0",
	"description": "Framework for effortlessly building Ink apps",
	"license": "MIT",
	"repository": "vadimdemedes/pastel",
	"author": {
		"name": "Vadim Demedes",
		"email": "vadimdemedes@hey.com",
		"url": "https://vadimdemedes.com"
	},
	"type": "module",
	"exports": {
		"types": "./build/index.d.ts",
		"default": "./build/index.js"
	},
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "tsc --noEmit && xo && NODE_OPTIONS='--loader=ts-node/esm --experimental-specifier-resolution=node --no-warnings' ava",
		"prepare": "tsc"
	},
	"files": [
		"build"
	],
	"keywords": [
		"ink",
		"cli",
		"cli-app",
		"cli-framework"
	],
	"dependencies": {
		"@inkjs/ui": "^2.0.0",
		"commander": "^14.0.1",
		"decamelize": "^6.0.1",
		"plur": "^5.1.0",
		"read-package-up": "^11.0.0",
		"zod-validation-error": "^4.0.2"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^8.0.1",
		"@types/react": "^19.2.2",
		"@types/yargs": "^17.0.33",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.4.1",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^4.6.2",
		"execa": "^9.6.0",
		"ink": "^6.3.1",
		"prettier": "^3.6.2",
		"react": "^19.2.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"xo": "^0.58.0",
		"zod": "^4.1.12"
	},
	"peerDependencies": {
		"ink": ">=6.0.0",
		"react": ">=19.0.0",
		"zod": ">=4.0.0"
	},
	"ava": {
		"concurrency": 1,
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"environmentVariables": {
			"NODE_NO_WARNINGS": "1"
		}
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off",
			"no-await-in-loop": "off",
			"unicorn/prevent-abbreviations": "off",
			"@typescript-eslint/no-unsafe-assignment": "off",
			"@typescript-eslint/parameter-properties": "off",
			"react/react-in-jsx-scope": "off"
		},
		"overrides": [
			{
				"files": "test/fixtures/camelcase-command/commands/superDeploy.tsx",
				"rules": {
					"unicorn/filename-case": "off"
				}
			}
		]
	},
	"prettier": "@vdemedes/prettier-config"
}
